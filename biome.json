{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"experimentalScannerIgnores": [
			"node_modules/**",
			"tawkit-9.61/**",
			"audio/**",
			"images/**",
			"themes/**",
			"font/**",
			"slides/**",
			"data/**"
		],
		"includes": ["**/*.{js,jsx,ts,tsx,cjs,mjs}"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
