{
  "name": "react-prayer-widget",
  "version": "0.0.1",
  "description": "Embeddable prayer times widget components for React applications",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "keywords": [
    "prayer-times",
    "islamic",
    "react",
    "widget",
    "component",
    "typescript",
    "embed"
  ],
  "author": "dahshury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dahshury/react-prayer-widget.git"
  },
  "files": [
    "index.ts",
    "shared/**/*",
    "widgets/**/*",
    "entities/**/*",
    "!**/*.test.ts",
    "!**/*.test.tsx",
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "!**/node_modules/**",
    "!**/.next/**",
    "!**/dist/**",
    "!**/out/**",
    "!**/app/**",
    "!**/pages/**",
    "!**/features/**"
  ],
  "scripts": {
    "predev": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true})\"",
    "build": "next build",
    "dev": "next dev --turbo",
    "lint": "next lint",
    "start": "next start",
    "prepare": "husky",
    "check": "bunx ultracite fix && bun run typecheck",
    "biome:check": "biome check --no-errors-on-unmatched .",
    "biome:fix": "biome check --write --no-errors-on-unmatched .",
    "typecheck": "tsgo --noEmit",
    "knip": "bunx knip",
    "prettier:md:check": "bunx prettier --check \"**/*.md\" --ignore-path .prettierignore",
    "prettier:md:write": "bunx prettier --write \"**/*.md\" --ignore-path .prettierignore",
    "mdlint:check": "markdownlint \"**/*.md\" -i .prettierignore",
    "mdlint:fix": "markdownlint --fix \"**/*.md\" -i .prettierignore"
  },
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./index.ts"
    }
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "1.2.6",
    "@vercel/analytics": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "color": "^5.0.0",
    "countries-and-timezones": "^3.8.0",
    "country-data-list": "^1.5.5",
    "country-region-data": "^4.0.0",
    "geist": "^1.5.1",
    "lucide-react": "^0.543.0",
    "motion": "^12.23.12",
    "radix-ui": "^1.4.3",
    "react-circle-flags": "^0.0.23",
    "react-day-picker": "9.9.0",
    "react-use-measure": "^2.1.7",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20251201.1",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "ultracite": "6.3.8"
  }
}
